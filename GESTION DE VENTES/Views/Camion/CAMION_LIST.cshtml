                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td> 172 TU 0147</td>
                        <td>
                            RENAULT
                        </td>
                        <td>180 000 KM</td>
                        <td>800,000</td>
                        <td style="text-align:right">
                            <div class="btn-group btn-group-sm">
                                <a href="/Camion/DETAILS" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td> 160 TU 4420</td>
                        <td>
                            IVECO
                        </td>
                        <td>240 000 KM</td>
                        <td>1250,550</td>
                        <td style="text-align:right">
                            <div class="btn-group btn-group-sm">
                                <a href="/Camion/DETAILS" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td> 89 TU 1585</td>
                        <td>
                            FIAT OM 40
                        </td>
                        <td>310 000 KM</td>
                        <td>1008,450</td>
                        <td style="text-align:right">
                            <div class="btn-group btn-group-sm">
                                <a href="/Camion/DETAILS" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.content -->

<div class="modal fade" id="modal-add">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nouveau camion</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Matricule</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Marque</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kilométrage</label>
                            <input type="number" step="1" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Prochaine visite techinque</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Assurance</label>
                            <input type="date" class="form-control">
                        </div>
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script>
    $(function () {
        $('#tab_camion').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
